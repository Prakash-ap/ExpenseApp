<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:id="@+id/cardview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight=".4"
           >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/child_dat"
                    android:hint="Date"
                    android:textSize="40sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/child_month"
                    android:hint="Month"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight=".7"
                    android:singleLine="true"
                    android:textColor="#333333"
                   />
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#d3d3d3"
                android:layout_marginRight="2dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".3"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                   >

                    <info.androidhive.fontawesome.FontTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/child_cat_img"
                        android:layout_weight=".8"
                        app:solid_icon="true"
                        android:gravity="center"
                        android:textSize="20sp"

                        />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/child_cat_name"
                    android:hint="Category"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight=".2"
                    android:textColor="#333333"
                    android:layout_marginLeft="2dp"

                   />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:padding="4dp">

                    <info.androidhive.fontawesome.FontTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/child_acc_img"
                        android:layout_weight=".8"
                        app:solid_icon="true"
                        android:gravity="center"
                        android:textSize="20sp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/child_type"
                        android:hint="Account"
                        android:textStyle="bold"
                        android:layout_weight=".2"
                        android:textSize="20sp"
                        android:layout_marginLeft="2dp"
                        android:textColor="#333333"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:padding="4dp">

                    <info.androidhive.fontawesome.FontTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        app:solid_icon="true"
                        android:textSize="16sp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/child_note"
                        android:hint="Note"
                        android:layout_weight=".2"
                        android:textSize="16sp"
                        android:layout_marginLeft="2dp"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".3"
                android:layout_gravity="bottom"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/child_amount"
                    android:hint="Amount"
                    android:singleLine="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="22sp"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/edit"
                        android:id="@+id/trans_edt"
                        android:visibility="invisible"
                        android:layout_toLeftOf="@+id/cat_delete"
                        android:padding="4dp"



                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/delete"
                        android:id="@+id/trans_delete"
                        android:visibility="invisible"

                        android:padding="4dp"


                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>