<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TransactionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/date_selector"
            android:id="@+id/parentlayout1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previous"
                android:src="@drawable/befores"
                android:layout_weight=".1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateselector"
                android:hint="Date"
                android:textColorHint="#ffffff"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_weight=".8"
               />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next"
                android:src="@drawable/nexts"
                android:layout_weight=".1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:orientation="vertical"
            android:layout_below="@+id/parentlayout1"
            android:id="@+id/parentlayout2"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ttotal"
                    android:text="@string/totalbalance"
                    android:layout_weight=".5"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ttotaltext"
                    android:text="Total Income"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_weight=".5"
                    android:textColor="@android:color/white"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tcurrentdate"
                    android:hint="july 20th,2019"
                    android:singleLine="true"
                    android:textSize="15sp"

                    android:layout_weight=".5"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ttotalincometext"
                    android:hint="+2,145.00"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_weight=".5"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_gravity="center"
              >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ttotalAmount"
                    android:hint="2,430.00"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:weightSum="1"
                   >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ttotalexpenses"
                        android:text="Total Expenses"
                        android:textSize="15sp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ttotalexpensevalue"
                        android:hint="-1,445.00"
                        android:textColor="@android:color/white"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColorHint="@android:color/white"
                        />
                </LinearLayout>

                </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Transactions"
            android:textColor="#5a5a5a"
            android:textSize="18sp"
            android:layout_below="@+id/parentlayout2"
            android:id="@+id/translisttitle"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/parentlayout"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/shape"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tincometext"
                    android:text="Total Income"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textColor="@android:color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ups"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tincomevalue"
                        android:hint="$999"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/shape"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/texpensetext"
                    android:text="Total Expenses"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textColor="@android:color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ups"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/texpensevalue"
                        android:hint="$999"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textColorHint="@android:color/white"
                        android:layout_gravity="center"
                        />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomlayout"
            android:layout_below="@+id/translisttitle"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/trecyclerview">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomlayout"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            app:cardElevation="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/before"
                    android:src="@drawable/before"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/after"
                    android:src="@drawable/next"
                    android:text="Balance"

                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_alignParentEnd="true"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="EX"
                        android:gravity="center"
                        android:layout_weight=".5"
                        />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/filter"
                        android:src="@drawable/filter"
                        android:text="Balance"
                        android:layout_weight=".5"

                        />


                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>